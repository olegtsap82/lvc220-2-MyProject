.wrapper {
	max-width: 960px;
	margin: auto;
}

header {
	padding: 20px 0;
}

#herder-img {
	float: right;
}

nav a {
	text-decoration: none;
}

nav ul {
	margin: 0;
	padding: 0;
}

nav li {
	list-style-position: inside;
	font: 14px 'Oswald', sans-serif;
	padding: 10px;
}
.header-menu li {
	display: inline-block;
	padding: 10px 30px;
	margin: 0;
}
.header-menu li.active {
	background: #29c5e6;
	color: #fff;
}

.header-menu a {
	color: #b2b2b2;
}